<table>
  <thead>
    <tr>
      <th>Name/Contact</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Primary Contact</th>
      <th>Events</th>
    </tr>
  </thead>
  <tbody>
    <% orgs.each do |org| %>
      <tr>
        <td>
          <a href=<%=worker_incident_legacy_organization_path(event_id, org.id)%>> 
            <%= org.name %>
          </a>
        </td>
        <td> <%= org.email %> </td>
        <td> Temporarily <a href="http://blog.crisiscleanup.org/2017/09/internal-phone-numbers-hidden.html" target="_blank">Hidden</a></td>
        <td> <%= org.url %> </td>
        <td> <a href="<%=worker_incident_legacy_contact_path(event_id, org.primary_contact_id(org.id)) if org.primary_contact_id(org.id)%>"><%= org.primary_contact_name(org.id) %></a> </td>
        <td>
          <% org.legacy_events.each do |event| %>
            <%= event.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>