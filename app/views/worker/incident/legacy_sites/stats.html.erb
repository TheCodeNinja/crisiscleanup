<% content_for :title do %>
    Crisis Cleanup - Stats
<% end %>

<% content_for :subheader do %> 
<div class="row subheader">
        <div class="small-12 medium-8 large-10 columns">
            <h2>Stats by incident: <%= @event.name %></h2>
                <hr class="medium"> 
        </div>                
        <div class="small-12 medium-4 large-2 columns" align="center">
            <%= image_tag "characters/Computer.png", :class => "character" ,:alt => "stats"  %>
        </div>    
</div>    
<% end %>
            
<% content_for :main do %>
<h3>Work types</h3>
<table>
  <thead>
    <tr>
      <% @work_type_counts.each do |work_type| %>
      	<td><%= work_type[0] %></td>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @work_type_counts.each do |work_type| %>
      	<td><%= work_type[1] %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h3>Statuses</h3>
<table>
  <thead>
    <tr>
      <% @status_counts.each do |status| %>
      	<td><%= status[0] %></td>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @status_counts.each do |status| %>
      	<td><%= status[1] %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h3>By Organization</h3>
<table>
  <thead>
    <tr>
      <td>Incident</td>
      <td>Organization</td>
      <td>Claimed Work Orders</td>
      <td>Open</td>
      <td>Closed</td>
      <td>Added</td>
      <td>Last Login</td>
    </tr>
  </thead>
  <tbody>
  	<% @event.legacy_organizations.each do |org| %>
	    <tr>
	      <td><%= @event.name %></td>
        <td><%= org.name %></td>
        <td><%= org.claimed_site_count @event.id %></td>
        <td><%= org.open_site_count @event.id %></td>
        <td><%= org.closed_site_count @event.id %></td>
        <td><%= org.reported_site_count @event.id %></td>
        <td><%= org.timestamp_login %></td>
	    </tr>
	<% end %>
  </tbody>
</table>

<% end %>

<% content_for :sidebar do %>        
<div id="sidebar">
    <h2>How to Use this Info</h2>
    <p>Use this page to follow up with organizations that may be struggling or perhaps have not reported their work.</p>
    <p>Although a local VOAD <em>may</em> appoint a single organization to coordinate with other organizations, it's everybody's job to follow up.</p>
</div>
<% end %>
